{% extends 'base.html.twig' %}

{% block body %}
	<div class="btn-group d-flex justify-content-center mb-4" role="group" aria-label="Task Status">
		<a href="{{ path('task_list', {'status': 'todo'}) }}" class="btn {{ status == 'todo' ? 'btn-warning' : 'btn-outline-warning text-dark' }}">Show Tasks To Do</a>
		<a href="{{ path('task_list', {'status': 'done'}) }}" class="btn {{ status == 'done' ? 'btn-warning' : 'btn-outline-warning text-dark' }}">Show completed tasks</a>
	</div>

	<div class="pagination d-flex justify-content-between">
		{% if currentPage > 1 %}
			<a class="btn btn-primary" href="{{ path('task_list', {'page': currentPage - 1, 'status': status}) }}"><< Previous</a>
		{% else %}
			<button class="btn btn-primary disabled"><< Previous</button>
		{% endif %}
		<span class="page-number">Page {{ currentPage }} of {{ totalPages }}</span>
		{% if currentPage < totalPages %}
			<a class="btn btn-primary" href="{{ path('task_list', {'page': currentPage + 1, 'status': status}) }}">Next >></a>
		{% else %}
			<button class="btn btn-primary disabled">Next >></button>
		{% endif %}
	</div>

	<div class="row mt-3">
		{% for task in tasks %}
			<div class="col-md-4 col-12 mb-3">
				<div class="card h-100">
					<div class="card-body">
						<h5 class="card-title"><a href="{{ path('task_edit', {'id' : task.id }) }}">{{ task.title }}</a>
						</h5>
						<h6 class="card-subtitle mb-2 text-body-secondary"
						    style="font-size: smaller; font-style: italic;">Created
							by: {{ task.user.username | default('Anonymous') }} <br>
							at: {{ task.createdAt|date('Y-m-d H:i:s') }}</h6>
						<p class="card-text">{{ task.content }}</p>
					</div>
					<div class="card-footer mb-0">
						<a href="{{ path('task_delete', {'id' : task.id }) }}"
						   class="btn btn-danger btn-sm">Delete</a>
						{% if task.isDone == false %}
							<a href="{{ path('task_toggle', {'id' : task.id }) }}"
							   class="btn btn-success btn-sm">Click to mark as done</a>
						{% else %}
							<a href="{{ path('task_toggle', {'id' : task.id }) }}"
							   class="btn btn-secondary btn-sm">Click to mark as to do</a>
						{% endif %}
					</div>
				</div>
			</div>

		{% else %}
			<div class="alert alert-warning mt-3" role="alert">
				There are no tasks yet.
			</div>
		{% endfor %}
	</div>
{% endblock %}
