{% extends 'base.html.twig' %}

{% block body %}
	{% if users|length == 0 %}
		<div class="alert alert-warning" role="alert">
			There are no user yet. <a href="{{ path('admin_user_create') }}" class="btn btn-warning pull-right">Cr√©er un
				utilisateur</a>
		</div>
	{% else %}
		<div class="row">
			<table class="table">
				<thead>
				<tr>
					<th>#</th>
					<th>Username</th>
					<th>Email</th>
					<th>Actions</th>
				</tr>
				</thead>
				<tbody>
				{% for user in users %}
					<tr>
						<th scope="row">{{ loop.index }}</th>
						<td>{{ user.username }}</td>
						<td>{{ user.email }}</td>
						<td>
							<a href="{{ path('admin_user_edit', {'id' : user.id}) }}" class="btn btn-success btn-sm">Edit</a>
						</td>
					</tr>
				{% endfor %}
				</tbody>
			</table>
		</div>
	{% endif %}
{% endblock %}
