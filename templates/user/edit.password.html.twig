{% extends 'base.html.twig' %}

{% block header_title %}<h1><strong>Please create your password</strong></h1>{% endblock %}

{% block body %}
	<div class="alert alert-warning" role="alert">
		Please update your password to continue use ToDo App
	</div>
	<div class="row">
		{{ form_start(form, {'action' : path('user_edit_generated_password', {'id' : user.id})}) }}
		{{ form_widget(form) }}

		<button type="submit" class="btn btn-success pull-right">Modifier</button>
		{{ form_end(form) }}
	</div>
{% endblock %}
